<Window x:Class="IntelligentDesktop.UI.Views.BoxSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Box Settings" Height="450" Width="320"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Border Background="#FF1E1E1E" BorderBrush="#80FFFFFF" BorderThickness="1" CornerRadius="8">
        <StackPanel Margin="20">
            <TextBlock Text="Edit Box" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Name" Foreground="#AAA" Margin="0,0,0,5" FontSize="12"/>
            <TextBox x:Name="NameInput" Height="30" VerticalContentAlignment="Center" 
                     Background="#333" Foreground="White" BorderThickness="0" Padding="5,0"
                     CaretBrush="White"/>
            
            <TextBlock Text="Backgound Color" Foreground="#AAA" Margin="0,15,0,8" FontSize="12"/>
            <WrapPanel>
                <WrapPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="30"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Margin" Value="0,0,8,8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            BorderBrush="Transparent" BorderThickness="2" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </WrapPanel.Resources>
                
                <Button Background="#000000" Tag="#000000" Click="Color_Click"/>
                <Button Background="#E74C3C" Tag="#E74C3C" Click="Color_Click"/>
                <Button Background="#3498DB" Tag="#3498DB" Click="Color_Click"/>
                <Button Background="#2ECC71" Tag="#2ECC71" Click="Color_Click"/>
                <Button Background="#9B59B6" Tag="#9B59B6" Click="Color_Click"/>
                <Button Background="#F1C40F" Tag="#F1C40F" Click="Color_Click"/>
                <Button Background="#E67E22" Tag="#E67E22" Click="Color_Click"/>
                <Button Background="#1ABC9C" Tag="#1ABC9C" Click="Color_Click"/>
            </WrapPanel>
            
            <TextBlock Text="Opacity" Foreground="#AAA" Margin="0,10,0,5" FontSize="12"/>
            <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1.0" Value="0.5" 
                    IsSnapToTickEnabled="True" TickFrequency="0.05"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="취소" Click="Cancel_Click" 
                        Width="70" Height="30" Margin="0,0,10,0"
                        Background="#333" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="완료" Click="OK_Click" 
                        Width="70" Height="30"
                        Background="#3498DB" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
