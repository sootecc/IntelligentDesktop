<Window x:Class="IntelligentDesktop.UI.Views.BoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Box"
        Width="200" Height="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="CanResizeWithGrip"
        AllowDrop="True"
        Drop="BoxWindow_Drop"
        DragEnter="BoxWindow_DragEnter"
        DragLeave="BoxWindow_DragLeave">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <!-- 아이콘 항목 템플릿 -->
        <DataTemplate x:Key="IconItemTemplate">
            <StackPanel Orientation="Vertical"
                        Width="70" MinHeight="80"
                        Margin="5"
                        ToolTip="{Binding Name}"
                        Background="Transparent"
                        MouseLeftButtonDown="Icon_MouseLeftButtonDown"
                        PreviewMouseLeftButtonDown="Icon_PreviewMouseLeftButtonDown"
                        MouseRightButtonUp="Icon_MouseRightButtonUp"
                        MouseMove="Icon_MouseMove">
                <Image Source="{Binding Icon}"
                       Width="48" Height="48"
                       HorizontalAlignment="Center"/>
                <TextBlock x:Name="IconNameText"
                           Text="{Binding Name}"
                           TextTrimming="CharacterEllipsis"
                           TextAlignment="Center"
                           Foreground="White"
                           FontSize="11"
                           MaxWidth="68"
                           MaxHeight="28"
                           TextWrapping="Wrap"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="IconNameText" Property="MaxHeight" Value="100"/>
                    <Setter TargetName="IconNameText" Property="TextTrimming" Value="None"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    
    <Border x:Name="MainBorder"
            Background="#B3000000"
            BorderBrush="#80FFFFFF"
            BorderThickness="2"
            CornerRadius="8"
            Margin="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 제목 바 -->
            <Border Grid.Row="0" 
                    Background="#40000000"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    MouseMove="TitleBar_MouseMove"
                    MouseLeftButtonUp="TitleBar_MouseLeftButtonUp">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="박스 설정 (이름/색상)" Click="Settings_Click" FontWeight="Bold"/>
                        <MenuItem Header="색상 바로 변경">
                            <MenuItem Header="검정 (기본)" Tag="#B3000000" Click="QuickColor_Click"/>
                            <MenuItem Header="빨강" Tag="#B3D32F2F" Click="QuickColor_Click"/>
                            <MenuItem Header="파랑" Tag="#B31976D2" Click="QuickColor_Click"/>
                            <MenuItem Header="초록" Tag="#B3388E3C" Click="QuickColor_Click"/>
                            <MenuItem Header="노랑" Tag="#B3FBC02D" Click="QuickColor_Click"/>
                            <MenuItem Header="보라" Tag="#B37B1FA2" Click="QuickColor_Click"/>
                            <MenuItem Header="핑크" Tag="#B3C2185B" Click="QuickColor_Click"/>
                        </MenuItem>
                        <MenuItem Header="투명도 설정">
                            <MenuItem Header="100% (불투명)" Tag="1.0" Click="QuickOpacity_Click"/>
                            <MenuItem Header="80%" Tag="0.8" Click="QuickOpacity_Click"/>
                            <MenuItem Header="60%" Tag="0.6" Click="QuickOpacity_Click"/>
                            <MenuItem Header="40%" Tag="0.4" Click="QuickOpacity_Click"/>
                            <MenuItem Header="20%" Tag="0.2" Click="QuickOpacity_Click"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="새 박스 만들기" Click="NewBox_Click"/>
                        <MenuItem Header="박스 삭제" Click="DeleteBox_Click"/>
                        <Separator/>
                        <MenuItem Header="박스 자동 정렬" Click="AutoAlign_Click"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <TextBlock x:Name="TitleText"
                               Text="New Box"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="10,0,30,0"
                               TextTrimming="CharacterEllipsis"
                               MouseLeftButtonDown="TitleText_MouseLeftButtonDown"/>
                    
                    <!-- 최소화 버튼 -->
                    <Button x:Name="MinimizeButton"
                            Content="─"
                            Width="20" Height="20"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="10"
                            Click="MinimizeButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>
            
            <!-- 아이콘 목록 -->
            <Grid Grid.Row="1">
                <!-- 빈 상태 안내 -->
                <TextBlock x:Name="EmptyHint"
                           Text="파일을 여기에 드롭하세요"
                           Foreground="#80FFFFFF"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"
                           IsHitTestVisible="False"/>
                
                <ListBox x:Name="IconList"
                         SelectionMode="Extended"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemTemplate="{StaticResource IconItemTemplate}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="박스 설정 (이름/색상)" Click="Settings_Click" FontWeight="Bold"/>
                            <MenuItem Header="색상 바로 변경">
                                <MenuItem Header="검정 (기본)" Tag="#B3000000" Click="QuickColor_Click"/>
                                <MenuItem Header="빨강" Tag="#B3D32F2F" Click="QuickColor_Click"/>
                                <MenuItem Header="파랑" Tag="#B31976D2" Click="QuickColor_Click"/>
                                <MenuItem Header="초록" Tag="#B3388E3C" Click="QuickColor_Click"/>
                                <MenuItem Header="노랑" Tag="#B3FBC02D" Click="QuickColor_Click"/>
                                <MenuItem Header="보라" Tag="#B37B1FA2" Click="QuickColor_Click"/>
                                <MenuItem Header="핑크" Tag="#B3C2185B" Click="QuickColor_Click"/>
                            </MenuItem>
                            <MenuItem Header="투명도 설정">
                                <MenuItem Header="100% (불투명)" Tag="1.0" Click="QuickOpacity_Click"/>
                                <MenuItem Header="80%" Tag="0.8" Click="QuickOpacity_Click"/>
                                <MenuItem Header="60%" Tag="0.6" Click="QuickOpacity_Click"/>
                                <MenuItem Header="40%" Tag="0.4" Click="QuickOpacity_Click"/>
                                <MenuItem Header="20%" Tag="0.2" Click="QuickOpacity_Click"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="새 박스 만들기" Click="NewBox_Click"/>
                            <MenuItem Header="박스 정렬" Click="AutoAlign_Click"/>
                            <Separator/>
                            <MenuItem Header="박스 삭제" Click="DeleteBox_Click"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                    <Setter Property="BorderBrush" Value="#80FFFFFF"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#20FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
            
            <!-- 리사이즈 그립 -->
            <Thumb x:Name="ResizeGrip"
                   Grid.Row="1"
                   Width="16" Height="16"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Opacity="0.5"
                   Cursor="SizeNWSE"
                   DragDelta="ResizeGrip_DragDelta">
                <Thumb.Template>
                    <ControlTemplate>
                        <Grid Background="Transparent">
                            <Path Data="M 0,16 L 16,0 M 5,16 L 16,5 M 10,16 L 16,10"
                                  Stroke="#80FFFFFF"
                                  StrokeThickness="1"/>
                        </Grid>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Grid>
    </Border>
</Window>
