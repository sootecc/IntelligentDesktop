<Window x:Class="IntelligentDesktop.UI.Views.ClockWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Clock" Height="150" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" CornerRadius="0" GlassFrameThickness="-1" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="MainBorder" Background="#80000000" CornerRadius="20" Padding="20">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="시계 닫기" Click="Close_Click"/>
                <Separator/>
                <MenuItem Header="배경색 변경">
                    <MenuItem Header="검정 (기본)" Tag="#000000" Click="QuickColor_Click"/>
                    <MenuItem Header="화이트" Tag="#FFFFFF" Click="QuickColor_Click"/>
                    <MenuItem Header="레드" Tag="#D32F2F" Click="QuickColor_Click"/>
                    <MenuItem Header="블루" Tag="#1976D2" Click="QuickColor_Click"/>
                    <MenuItem Header="그린" Tag="#388E3C" Click="QuickColor_Click"/>
                    <MenuItem Header="옐로우" Tag="#FBC02D" Click="QuickColor_Click"/>
                    <MenuItem Header="퍼플" Tag="#7B1FA2" Click="QuickColor_Click"/>
                </MenuItem>
                <MenuItem Header="투명도 설정">
                    <MenuItem Header="10%" Click="QuickOpacity_Click" Tag="0.1"/>
                    <MenuItem Header="30%" Click="QuickOpacity_Click" Tag="0.3"/>
                    <MenuItem Header="50%" Click="QuickOpacity_Click" Tag="0.5"/>
                    <MenuItem Header="70%" Click="QuickOpacity_Click" Tag="0.7"/>
                    <MenuItem Header="90%" Click="QuickOpacity_Click" Tag="0.9"/>
                    <MenuItem Header="100%" Click="QuickOpacity_Click" Tag="1.0"/>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TimeText" Text="12:00" FontSize="60" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="DateText" Text="2026년 1월 8일 목요일" FontSize="16" Foreground="#DDDDDD" HorizontalAlignment="Center" Margin="0,5,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Border>
</Window>
