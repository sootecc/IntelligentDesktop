<Window x:Class="IntelligentDesktop.UI.Views.TitleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Title"
        Width="200" Height="30"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#333333"
        BorderBrush="#666666"
        BorderThickness="1"
        Deactivated="Window_Deactivated">

    <TextBox x:Name="EditBox"
             Background="#FFFFFF"
             Foreground="#000000"
             FontSize="12"
             FontWeight="SemiBold"
             Padding="4,2"
             BorderThickness="0"
             VerticalContentAlignment="Center"
             KeyDown="EditBox_KeyDown"
             InputMethod.IsInputMethodEnabled="True"/>
</Window>
